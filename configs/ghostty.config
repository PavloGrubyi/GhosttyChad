# ═══════════════════════════════════════════════════════════════════
# GHOSTTY CONFIGURATION - GhosttyChad
# https://github.com/PavloGrubyi/GhosttyChad
# ═══════════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────────────
# THEME - Catppuccin with automatic light/dark switching
# ─────────────────────────────────────────────────────────────────────
theme = dark:Catppuccin Mocha,light:Catppuccin Latte

# ─────────────────────────────────────────────────────────────────────
# FONT
# ─────────────────────────────────────────────────────────────────────
font-family = JetBrainsMono Nerd Font
font-size = 12
font-thicken = true

# ─────────────────────────────────────────────────────────────────────
# WINDOW APPEARANCE
# ─────────────────────────────────────────────────────────────────────
background-opacity = 1.0
background-blur = 0
window-padding-x = 10
window-padding-y = 10
window-decoration = auto
gtk-single-instance = true

# ─────────────────────────────────────────────────────────────────────
# CURSOR
# ─────────────────────────────────────────────────────────────────────
cursor-style = block
cursor-style-blink = true
mouse-hide-while-typing = true

# ─────────────────────────────────────────────────────────────────────
# SHELL INTEGRATION
# ─────────────────────────────────────────────────────────────────────
shell-integration = detect
shell-integration-features = cursor,sudo,title

# ─────────────────────────────────────────────────────────────────────
# CLIPBOARD & SECURITY
# ─────────────────────────────────────────────────────────────────────
clipboard-read = ask
clipboard-write = allow
clipboard-paste-protection = true
copy-on-select = true

# ─────────────────────────────────────────────────────────────────────
# SCROLLBACK
# ─────────────────────────────────────────────────────────────────────
scrollback-limit = 100000

# ═══════════════════════════════════════════════════════════════════
# KEYBINDINGS (Chrome-like)
# ═══════════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────────────
# TABS (Chrome-style)
# ─────────────────────────────────────────────────────────────────────
keybind = super+t=new_tab
keybind = ctrl+t=new_tab
keybind = ctrl+w=close_surface
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+shift+alt+left=move_tab:-1
keybind = ctrl+shift+alt+right=move_tab:1

# ─────────────────────────────────────────────────────────────────────
# WINDOWS
# ─────────────────────────────────────────────────────────────────────
keybind = ctrl+n=new_window
keybind = f11=toggle_fullscreen

# ─────────────────────────────────────────────────────────────────────
# SPLITS
# ─────────────────────────────────────────────────────────────────────
keybind = ctrl+backslash=new_split:right
keybind = ctrl+shift+backslash=new_split:down

# Navigate splits (vim-style + arrows)
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:bottom
keybind = ctrl+shift+k=goto_split:top
keybind = ctrl+shift+l=goto_split:right
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = alt+up=goto_split:top
keybind = alt+down=goto_split:bottom

# Split management
keybind = ctrl+shift+z=toggle_split_zoom
keybind = ctrl+shift+equal=equalize_splits

# ─────────────────────────────────────────────────────────────────────
# SCROLLING & NAVIGATION
# ─────────────────────────────────────────────────────────────────────
keybind = ctrl+shift+up=jump_to_prompt:-1
keybind = ctrl+shift+down=jump_to_prompt:1
keybind = page_up=scroll_page_up
keybind = page_down=scroll_page_down

# ─────────────────────────────────────────────────────────────────────
# FONT SIZE
# ─────────────────────────────────────────────────────────────────────
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+0=reset_font_size

# ─────────────────────────────────────────────────────────────────────
# OTHER
# ─────────────────────────────────────────────────────────────────────
keybind = ctrl+shift+r=reload_config
keybind = shift+enter=text:\n
